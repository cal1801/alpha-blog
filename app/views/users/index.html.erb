<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
  <%= will_paginate %>
</div>
<%= @users.each do |user|%>
  <ul class="user-listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <div class="row">
          <li class="col-md-4"><%= link_to gravatar_for(user), user_path(user)%></li>
          <div class="col-md-8">
            <li class="article-title"><%=link_to user.username, user_path(user)%></li>
            <li><small><%=pluralize(user.articles.count, "article") if user.articles%></small></li>
          </div>
        </div>
      </div>
    </div>
  </ul>
<%end%>
<div align="center">
  <%= will_paginate %>
</div>