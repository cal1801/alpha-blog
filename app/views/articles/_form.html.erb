<%= render "shared/errors", obj: @article%>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-xs-2">
          <%=f.label :title%>
        </div>
        <div class="col-xs-10">
          <%=f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-xs-2">
          <%=f.label :description%>
        </div>
        <div class="col-xs-10">
          <%=f.text_area :description, class: "form-control", placeholder: "Fill out your body of your article", rows: 10 %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-xs-2 col-xs-offset-2">
          <%=f.submit class: "btn btn-primary btn-lg"%>
        </div>
        <div class="control-label col-xs-8">
          [<%= link_to "Cancel request and return to articles listing", articles_path, class: "return" %>]
        </div>
      </div>

    <% end %>
  </div>
</div>